@model Feedback
@{
    ViewData["Title"] = "Feedback";
}
<div id="main-content">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Edit Feedback</h3>
                    <p class="text-subtitle text-muted">
                        In This Section You Can Edit Feedbacks;
                    </p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="DashboardIndex">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Feedback / Edit</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <a asp-controller="Feedback" asp-action="Index" class="btn btn-primary"> Back To Users </a>
            </div>
        </div>

        <section class="section">
            <div class="card">
                <div class="card-body">
                    <form class="form" asp-controller="Feedback" asp-action="Edit" method="post">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Name</label>
                                        <input class="form-control" asp-for="Name" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input class="form-control" asp-for="Email" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Message" class="form-label">Message</label>
                                    <textarea class="form-control" asp-for="Message"></textarea>
                                    <span class="text-danger" asp-validation-for="Message"></span>
                                </div>
                            </div>


                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label for="status" class="form-label"></label>
                                    <select class="form-select choices" asp-for="Status">
                                        <option value="" hidden>Select Status</option>

                                        <option value="0">Not Approved</option>
                                        <option value="1">Approved</option>

                                    </select>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-primary">Update Feedback</button>
                    </form>
                </div>
            </div>

        </section>


    </div>
</div>

