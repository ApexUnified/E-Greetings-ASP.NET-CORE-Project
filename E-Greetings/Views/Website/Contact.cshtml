
@{
    ViewData["Title"] = "Contact";
    Layout = "_LayoutWebsite";
}
<section class="hero-section mb-sm-5">
    <div class="container h-100">
        <div class="row align-items-center h-100">
            <!-- Left Side Text -->
            <div class="col-lg-6 hero-text">
                <h1 class="display-4 fw-bold mb-4">Contact E-Greetings For Any Kind Of Queries</h1>
                <p class="lead mb-4">We Are Here To Help You Regarding Your Queries. And We Are Pleased That We Will Receive Your message And We will Fix All Your Issues </p>
                <a href="#contact_form" class="btn bg-primary-subtle btn-lg px-4">Contact Us </a>
            </div>
            <!-- Right Side Image -->
            <div class="col-lg-6 text-center d-xl-block d-sm-none hide-on-small">
                <img class="img-fluid rounded shadow" src="~/images/pexels-james-gana-324309608-13747843.jpg" alt="Image" />
            </div>
        </div>
    </div>
</section>



<section class="hero-section mb-sm-5 d-flex justify-content-center">
    <div class="container h-100" id="contact_form">
        <div class="row align-items-center h-100">
            <!-- Left Side Text -->
            <div class="col-lg-12">
               <div class="card shadow"> 
               <div class="card-body">
                     <h1 class="hero-text text-center fw-bold mb-4">Contact Us Form</h1>
                        <form asp-controller="Website" asp-action="ContactUs" method="post">
                     <div class="form-group">
                         <label class="form-label"> Name: </label>
                         <input class="form-control" name='name'  />
                     </div>

                     <div class="form-group">
                         <label class="form-label"> Email: </label>
                         <input class="form-control" name="email" />
                     </div>

                     <div class="form-group">
                         <label class="form-label"> Message: </label>
                         <textarea class="form-control" name="message"></textarea>
                     </div>

                    <button type="submit" class="btn bg-primary-subtle mt-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-check-fill" viewBox="0 0 16 16">
                            <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 1.59 2.498C8 14 8 13 8 12.5a4.5 4.5 0 0 1 5.026-4.47zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471z" />
                            <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0m-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.774.773a.75.75 0 0 0 1.174-.144l1.335-2.226a.5.5 0 0 0-.172-.686" />
                        </svg>
                    Send Message</button>
            </form>
               </div>
               </div>
            </div>
        </div>
    </div>
</section>
