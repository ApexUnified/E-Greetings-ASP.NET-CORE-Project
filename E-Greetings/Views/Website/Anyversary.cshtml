
@{
    ViewData["Title"] = "Anyversary";
    Layout = "_LayoutWebsite";
}


@section Styles{

   <style>
        body {
            background: linear-gradient(135deg, #2c3e50, #3498db);
            min-height: 100vh;
            /* font-family: 'Cormorant Garamond', serif; */
        }

        .anniversary-card {
            max-width: 900px;
            margin: 2rem auto;
            background: #fff;
            border-radius: 30px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
        }

        .preview-section {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            padding: 3rem 2rem;
            position: relative;
            color: white;
            overflow: hidden;
        }

        .heart {
            position: absolute;
            opacity: 0.1;
            font-size: 100px;
            color: white;
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(10deg);
        }

        }

        .anniversary-heading {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            font-weight: 700;
            color: #fff;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
            margin: 1rem 0;
            position: relative;
            z-index: 2;
        }

        .details-box {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            margin: 2rem 0;
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            z-index: 2;
        }

        .message-text {
            font-size: 1.4rem;
            line-height: 1.8;
            margin: 1.5rem 0;
            color: rgba(255, 255, 255, 0.9);
            font-style: italic;
        }

        .years-together {
            font-size: 2.5rem;
            font-weight: 700;
            color: #ffd700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            margin: 1rem 0;
        }

        .form-container {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            margin-top: 2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .custom-input {
            background: #f8f9fa;
            border: 2px solid transparent;
            border-radius: 15px;
            padding: 1rem;
            transition: all 0.3s ease;
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.1rem;
        }

        .custom-input:focus {
            background: white;
            border-color: #3498db;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.2);
            outline: none;
        }

        .btn-update {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            border: none;
            padding: 1rem 2rem;
            border-radius: 15px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(44, 62, 80, 0.4);
        }

        .theme-select {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            color: #2c3e50;
            padding: 0.5rem 1rem;
        }

        .signature {
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: 1.3rem;
            margin-top: 1rem;
            color: rgba(255, 255, 255, 0.9);
        }

       @@media (max-width: 768px) {
            .anniversary-card

        {
            margin: 1rem;
        }

        .anniversary-heading {
            font-size: 2.5rem;
        }

        .preview-section {
            padding: 2rem 1rem;
        }

        }
   </style>
}

<div class="container mt-4">
    <div class="anniversary-card">
        <!-- Preview Section -->
        <div class="preview-section" id="cardPreview">
            <div class="heart" style="top: 10%; left: 10%">❤</div>
            <div class="heart" style="top: 20%; right: 15%">❤</div>
            <div class="heart" style="bottom: 15%; left: 20%">❤</div>
            <div class="heart" style="bottom: 25%; right: 10%">❤</div>

            <div class="text-center">
                <h1 class="anniversary-heading" id="previewTitle">Happy Anniversary!</h1>
                <h2 class="years-together" id="previewYears">Celebrating 1 Year Together</h2>

                <div class="details-box">
                    <h3 id="previewNames">To [Partner Names]</h3>
                    <div class="message-text" id="previewMessage">
                        [Your anniversary message will appear here]
                    </div>

                    <div class="message-text" id="previewDate">
                        [Anniversary Date]
                    </div>

                    <div class="signature" id="previewFrom">
                        With love,<br>[Your Name]
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Section -->
        <div class="form-container">
            <div class="row">
                <div class="col-md-8">
                    <h3 class="text-center mb-4">Create Your Anniversary Card</h3>
                </div>

                <div class="col-md-4">
                    <button class="btn bg-dark-subtle" id="sendmail">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-arrow-up-fill" viewBox="0 0 16 16">
                            <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zm.192 8.159 6.57-4.027L8 9.586l1.239-.757.367.225A4.49 4.49 0 0 0 8 12.5c0 .526.09 1.03.256 1.5H2a2 2 0 0 1-1.808-1.144M16 4.697v4.974A4.5 4.5 0 0 0 12.5 8a4.5 4.5 0 0 0-1.965.45l-.338-.207z" />
                            <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.354-5.354 1.25 1.25a.5.5 0 0 1-.708.708L13 12.207V14a.5.5 0 0 1-1 0v-1.717l-.28.305a.5.5 0 0 1-.737-.676l1.149-1.25a.5.5 0 0 1 .722-.016" />
                        </svg>
                        Send To Your Loved Once</button>
                </div>
            </div>

            <form id="anniversaryForm">
                <input hidden value="@ViewData["card_id"]" id="card_id" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Partner Names</label>
                        <input type="text" class="custom-input form-control" id="partnerNames"
                               placeholder="Enter names (e.g., John & Jane)" onkeyup="updatePreview()">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Years Together</label>
                        <input type="number" class="custom-input form-control" id="yearsNumber"
                               placeholder="Number of years" onchange="updatePreview()">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Anniversary Date</label>
                        <input type="date" class="custom-input form-control" id="anniversaryDate"
                               onchange="updatePreview()">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Your Name</label>
                        <input type="text" class="custom-input form-control" id="senderName"
                               placeholder="Enter your name" onkeyup="updatePreview()">
                    </div>
                </div>

                <div class="row">
                      <div class="col-md-10 mb-3">

                        <div class="mb-3">
                            <label for="emailSelect" class="form-label">Select Email</label>
                            <select class="custom-input form-control" id="emailSelect" multiple="multiple">
                                <option value="" disabled selected>Select an email</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="col-md-2 mt-5">

                        <div>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#emailModal">
                                Add Email
                            </button>
                        </div>
                    </div>
                </div>
  
                
                <div class="mb-3">
                    <label class="form-label">Your Message</label>
                    <textarea class="custom-input form-control" id="message" rows="4"
                              placeholder="Write your anniversary message here..." onkeyup="updatePreview()"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Card Theme</label>
                    <select class="custom-input form-control" id="cardTheme" onchange="updateTheme()">
                        <option value="blue">Ocean Blue</option>
                        <option value="rose">Rose Gold</option>
                        <option value="emerald">Emerald Love</option>
                        <option value="royal">Royal Purple</option>
                    </select>
                </div>

                <button type="button" class="btn btn-update w-100" onclick="updatePreview()">
                    <i class="fas fa-heart me-2"></i>Update Anniversary Card
                </button>
            </form>
        </div>
    </div>

    <div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="emailModalLabel">Add Email</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="emailForm">
                        <div class="mb-3">
                            <label for="emailInput" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="emailInput" placeholder="Enter email" required />
                            <div id="emailError" class="text-danger" style="display: none;">Invalid email format</div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="addEmailButton" class="btn btn-primary">Add Email</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function formatDate(dateString) {
            if (!dateString) return '[Anniversary Date]';
            const date = new Date(dateString);
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            return date.toLocaleDateString('en-US', options);
        }

        function updatePreview() {
            const partnerNames = document.getElementById('partnerNames').value || '[Partner Names]';
            const yearsNumber = document.getElementById('yearsNumber').value || '1';
            const anniversaryDate = formatDate(document.getElementById('anniversaryDate').value);
            const senderName = document.getElementById('senderName').value || '[Your Name]';
            const message = document.getElementById('message').value || '[Your anniversary message will appear here]';

            document.getElementById('previewNames').textContent = `To ${partnerNames}`;
            document.getElementById('previewYears').textContent = `Celebrating ${yearsNumber} Year${yearsNumber > 1 ? 's' : ''} Together`;
            document.getElementById('previewMessage').textContent = message;
            document.getElementById('previewDate').textContent = anniversaryDate;
            document.getElementById('previewFrom').innerHTML = `With love,<br>${senderName}`;
        }

        function updateTheme() {
            const theme = document.getElementById('cardTheme').value;
            const previewSection = document.querySelector('.preview-section');
            const btnUpdate = document.querySelector('.btn-update');

            const themes = {
                blue: {
                    background: 'linear-gradient(45deg, #2c3e50, #3498db)',
                    button: 'linear-gradient(45deg, #2c3e50, #3498db)'
                },
                rose: {
                    background: 'linear-gradient(45deg, #e74c3c, #ff9f93)',
                    button: 'linear-gradient(45deg, #e74c3c, #ff9f93)'
                },
                emerald: {
                    background: 'linear-gradient(45deg, #27ae60, #2ecc71)',
                    button: 'linear-gradient(45deg, #27ae60, #2ecc71)'
                },
                royal: {
                    background: 'linear-gradient(45deg, #8e44ad, #9b59b6)',
                    button: 'linear-gradient(45deg, #8e44ad, #9b59b6)'
                }
            };

            previewSection.style.background = themes[theme].background;
            btnUpdate.style.background = themes[theme].button;
        }

        // Initialize the card
        updatePreview();

    </script>
        <script src="~/js/anyversary_card.js"></script>
}

