@model EditUser
@{
    ViewData["Title"] = "Users";
    var roles = ViewData["roles"] as List<Role>;
}
<div id="main-content">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Edit User</h3>
                    <p class="text-subtitle text-muted">
                        In This Section You Can Edit User In This System;
                    </p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="DashboardIndex">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">User / Edit</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <a asp-controller="User" asp-action="UserIndex" class="btn btn-primary"> Back To Users </a>
            </div>
        </div>

        <section class="section">
            <div class="card">
                <div class="card-body">
                    <form class="form" asp-controller="User" asp-action="UserEdit" method="post">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input class="form-control" asp-for="Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>


                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input class="form-control" asp-for="Email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>


                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input class="form-control" asp-for="Password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                    <input class="form-control" asp-for="ConfirmPassword">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>


                            <div class="col-lg-6 col-md-12">
                                <div class="mb-3">
                                    <label asp-for="RoleId" class="form-label">Roles</label>
                                    <select class="form-control choices" asp-for="RoleId">
                                        <option value="">Select Role</option>

                                        @{
                                            @if (roles != null && roles.Any())
                                            {
                                                foreach (var role in roles)
                                                {
                                                    <option value="@role.Id">@role.Name</option>
                                                }
                                            }
                                            else
                                            {
                                                <option disabled>No roles available</option>
                                            }
                                        }
                                    </select>
                                    <span class="text-danger" asp-validation-for="RoleId"></span>
                                </div>
                            </div>


                        </div>
                        <button type="submit" class="btn btn-primary">Update User</button>
                    </form>
                </div>
            </div>

        </section>


    </div>
</div>


